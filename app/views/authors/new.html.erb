<div class="container">
  <h1>Add a New Author</h1>
  <%= form_for @author do |f| %>
    <p>
        <%= f.label :name, "Author's Name"%><br/>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.submit "Add New Author" %>
    </p>
    <% end %>
    <%= link_to "Return to Home Page", root_path %>
  </div>
