<div class="jumbotron jumbotron-banner_book">
  <div class="container">
   <h1>Book Resources</h1>
  </div>
</div>
<div class="container">
  <div id="listing-books">
    <h2>Book Listing</h2>
    <div class="table-responsive">
      <table class="table table-condensed table-striped table-bordered">
        <tr>
          <th>Title</th>
          <th>Sub-Title</th>
          <th>Author's Name</th>
          <th>ISBN-13</th>
          <th>ISBN-10</th>
          <th>Date Entered</th>
          <th>View </th>
          <th>Edit </th>
          <th>Delete </th>
        </tr>

        <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.subtitle %></td>
            <td><%= book.author.name %></td>
            <td><%= book.isbn_13 %></td>
            <td><%= book.isbn_10 %></td>
            <td><%= book.created_at %></td>
            <td><%= link_to 'Show', book_path(book) %></td>
            <td><%= link_to 'Edit', edit_book_path(book) %></td>
            <td><%= link_to 'Delete', book_path(book), :notice => "Are you sure???", :method => :delete %></td>
          </tr>
        <% end %>
      </table>
  </div>
  <%= link_to '<< Add New Book', new_book_path, :class => "btn btn-primary btn-sm" %>
  </div>
</div>
